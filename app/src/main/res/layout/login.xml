<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg111">
    <ImageView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/logo22"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="30dip"
        android:gravity="center_vertical"
        android:background="@drawable/bordergray_table_topradius_ontrans"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:ems="10"
            android:id="@+id/username"
            android:hint="用户名"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:gravity="center_vertical"

        android:background="@drawable/bordergray_tablen_bottomradius_ontrans"

        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:ems="10"
            android:hint="密码"
            android:password="true"
            android:id="@+id/userpass"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <CheckBox android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:textColor="@color/white"
        android:text="自动登录"
        android:id="@+id/autologin"
        android:checked="false" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/login"
        android:background="@drawable/btn_red5_selector"

        >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="登  录"


           android:textColor="@color/white"
           android:textSize="20dp"
           />
    </LinearLayout>

</LinearLayout>