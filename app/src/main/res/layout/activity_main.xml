<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg111"
    tools:context=".MainActivity" >


    <!-- ViewPager组件 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >
               
        <!-- PagerTabStrip是标签页的切换效果 -->
       <!--  <android.support.v4.view.PagerTabStrip
            android:id="@+id/pagertab"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            />   -->
          
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_weight="0"
        android:background="@drawable/bg_white_trans"
        >
        <LinearLayout
            android:id="@+id/bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainbar_img1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/main_tab_item_home_focus" />

            <TextView
                android:id="@+id/mainbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:onClick="onclickMainbar"
                android:text="组织机构"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/mainbar_img2"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/main_tab_item_user_normal" />

            <TextView
                android:id="@+id/mainbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center_horizontal"
                android:onClick="onclickMainbar"
                android:text="联系人"
                android:textColor="@color/white"
                android:textSize="12dip" />
        </LinearLayout>

    </LinearLayout>
     
</LinearLayout>